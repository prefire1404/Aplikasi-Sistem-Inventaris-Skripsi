<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/normal_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".TambahNFC">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/TNFCTitle"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tnb1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/tnb1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAddDataToNfc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/tvIdLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/AIID"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tnId"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/boader_et_bg"
            android:drawablePadding="8dp"
            android:hint="@string/AIIDAdd"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/AIItemName"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tnNama"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/boader_et_bg"
            android:drawablePadding="8dp"
            android:hint="@string/AINameAdd"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvCategoryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/AIItemCategory"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/tnCategory"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/boader_et_bg"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvConditionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/AIICondition"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/tnCondition"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/boader_et_bg"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvQuantityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/AIItemQuantity"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tnQuantity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/boader_et_bg"
            android:drawablePadding="8dp"
            android:hint="@string/AIQuantityAdd"
            android:inputType="number"
            android:padding="8dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvGambarAsetLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/AIGambarAset"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spGambarAset"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/boader_et_bg"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:textColor="@color/black" />


    </LinearLayout>

    <Button
        android:id="@+id/btnAddDataToNfc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="88dp"
        android:backgroundTint="@color/dark_green"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/TNFCAddButton"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>