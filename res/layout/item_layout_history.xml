<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/boader_et_bg"
    android:orientation="vertical"
    android:padding="15dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:elevation="10dp"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/ihImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_add_photo" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/ihID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ihItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama:" />

    <TextView
        android:id="@+id/ihItemCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kategori:" />

    <TextView
        android:id="@+id/ihItemCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kondisi:" />

    <TextView
        android:id="@+id/ihItemQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jumlah:" />

    <TextView
        android:id="@+id/ihItemDateAdded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal Masuk:" />

</LinearLayout>