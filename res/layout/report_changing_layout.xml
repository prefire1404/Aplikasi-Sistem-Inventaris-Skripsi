<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_margin="8dp"
    android:background="@drawable/boader_et_bg">

    <TextView
        android:id="@+id/rcReportType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Laporan"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rcItemId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="ID Barang:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rcItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Nama Barang:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rcJumlahBarangDiubah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Jumlah Barang yang diubah:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rcAlasanPerubahan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Alasan Perubahan:"
        android:textStyle="bold" />
</LinearLayout>